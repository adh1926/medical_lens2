<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_form_view_medical" model="ir.ui.view">
        <field name="name">product.template.form.medical</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='detailed_type']" position="after">
                <field name="is_medical_lens"/>
                <field name="allow_prescription_upload" invisible="not is_medical_lens"/>
                <field name="medical_setup_type" invisible="not is_medical_lens" widget="radio"/>
            </xpath>
        </field>
    </record>

    <record id="product_attribute_view_form_medical" model="ir.ui.view">
        <field name="name">product.attribute.view.form.medical</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_fields']" position="after">
                <group><field name="is_medical_eye"/></group>
            </xpath>
            <xpath expr="//field[@name='value_ids']/tree/field[@name='name']" position="after">
                <field name="medical_eye_side" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Popups -->
    <record id="view_sale_line_image_popup" model="ir.ui.view">
        <field name="name">sale.order.line.image.popup</field>
        <field name="model">sale.order.line</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form string="Receta Médica">
                <sheet>
                    <div class="text-center">
                        <field name="medical_prescription_image" widget="image" options="{'size': [800, 800]}" nolabel="1"/>
                    </div>
                    <footer><button string="Cerrar" class="btn-secondary" special="cancel"/></footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_move_line_image_popup" model="ir.ui.view">
        <field name="name">account.move.line.image.popup</field>
        <field name="model">account.move.line</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <form string="Receta Médica">
                <sheet>
                    <div class="text-center">
                        <field name="medical_prescription_image" widget="image" options="{'size': [800, 800]}" nolabel="1"/>
                    </div>
                    <footer><button string="Cerrar" class="btn-secondary" special="cancel"/></footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Views Update -->
    <record id="view_order_form_inherit_medical" model="ir.ui.view">
        <field name="name">sale.order.form.medical</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                <field name="medical_prescription_ref" optional="show"/>
                <button name="action_show_image" type="object" icon="fa-eye" string="Ver Receta" invisible="not medical_prescription_image"/>
                <field name="medical_prescription_image" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_form_inherit_medical" model="ir.ui.view">
        <field name="name">account.move.form.medical</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="after">
                <field name="medical_prescription_ref" optional="show"/>
                <button name="action_show_image" type="object" icon="fa-eye" string="Ver Receta" invisible="not medical_prescription_image"/>
                <field name="medical_prescription_image" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>